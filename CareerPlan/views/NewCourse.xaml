<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CareerPlan.views.NewCoursePage"
    Title="Nuevo Curso">

    <StackLayout Padding="15" Spacing="20">
        <StackLayout>
            <Label Text="Nombre del Curso" FontSize="18" FontAttributes="Bold"/>
            <Entry/>
        </StackLayout>

        <StackLayout>
            <Label Text="Profesor" FontSize="18" FontAttributes="Bold"/>
            <Entry/>
        </StackLayout>

        <Grid ColumnSpacing="30">
            <StackLayout Grid.Column="0" >
                <Label Text="Creditos" FontSize="18" FontAttributes="Bold"/>
                <Entry HorizontalOptions="FillAndExpand" Keyboard="Numeric"/>
            </StackLayout>

            <StackLayout Grid.Column="1">
                <Label Text="Precio" FontSize="18" FontAttributes="Bold"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="$" VerticalTextAlignment="Center" FontSize="18"/>
                    <Entry HorizontalOptions="FillAndExpand" Keyboard="Numeric"/>
                </StackLayout>
            </StackLayout>
        </Grid>

        <StackLayout Orientation="Horizontal">
            <Label Text="Cursos Requisitos" VerticalTextAlignment="Center" FontSize="18" Padding="2,0,30,0" FontAttributes="Bold"/>
            <Button Text="Anadir" HorizontalOptions="EndAndExpand" FontSize="18" TextColor="White" BorderColor="Black" BorderWidth="2" BackgroundColor="Gray" CornerRadius="10"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center"  VerticalOptions="EndAndExpand">
            <Button  Text="Cancelar" TextColor="White" BorderColor="Black" BorderWidth="2" BackgroundColor="Gray" Padding="20" HorizontalOptions="CenterAndExpand" CornerRadius="10" FontAttributes="Bold" FontSize="18"/>
            <Button Text="Aceptar" TextColor="White" BorderColor="Black" BorderWidth="2" BackgroundColor="Gray" Padding="20" HorizontalOptions="CenterAndExpand" CornerRadius="10" FontAttributes="Bold" FontSize="18"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
