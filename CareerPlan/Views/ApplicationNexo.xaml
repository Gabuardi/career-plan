<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CareerPlan.Views.ApplicationNexo"
    Title="Application Nexo">
    <StackLayout Padding="20">
        <Label Text="CREATE NEW CAREER PLAN FLOW" Margin="0, 15" FontAttributes="Bold"/>

        <Grid Padding="15, 0">
            <Button Grid.Row="0" Clicked="GoToNoPlanPage"
                    Text="No Plan Page" BorderWidth="2" BorderColor="#000"/>
            <Button Grid.Row="1" Clicked="GoToNewPlanPage"
                    Text="New Plan Page" BorderWidth="2" BorderColor="#000"/>
            <Button Grid.Row="2" Clicked="GoToManagePeriodListPage"
                    Text="Manage Period List Page" BorderWidth="2" BorderColor="#000"/>
            <Button Grid.Row="3" Clicked="GoToStudentPeriod"
                    Text="Student Period Page" BorderWidth="2" BorderColor="#000"/>
            <Button Grid.Row="4" Clicked="GoToNewCoursePage"
                    Text="New Course Page" BorderWidth="2" BorderColor="#000"/>
            <Button Grid.Row="5" Clicked="GoToCareerPlanSummary"
                    Text="Career Plan Summary" BorderWidth="2" BorderColor="#000"/>
            <Button Grid.Row="6" Clicked="GoToHomepage"
                    Text="Homepage" BorderWidth="2" BorderColor="#000"/>
        </Grid>
    </StackLayout>
</ContentPage>
