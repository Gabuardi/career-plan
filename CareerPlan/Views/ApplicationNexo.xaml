<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CareerPlan.Views.ApplicationNexo"
    Title="Application Nexo">
    <StackLayout Padding="20" Spacing="30">
        <StackLayout Padding="15, 0">
            <Label Text="CREATE NEW CAREER PLAN FLOW" Margin="0, 15" FontAttributes="Bold"/>
            <Button Clicked="GoToNoPlanPage"
                    Text="No Plan Page" BorderWidth="2" BorderColor="#000"/>
        </StackLayout>

         <StackLayout Padding="15, 0">
            <Label Text="CAREER PLAN TRACKING FLOW" Margin="0, 15" FontAttributes="Bold"/>
            <Button Clicked="GoToHomepage"
                    Text="Homepage" BorderWidth="2" BorderColor="#000"/>
            <Button Clicked="GoToCareerPlanBoard" Text="Career Plan Board" BorderWidth="2" BorderColor="#000"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
